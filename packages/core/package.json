{
  "name": "@jadis/core",
  "version": "0.5.0",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.mjs",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "28.0.6",
    "@rollup/plugin-node-resolve": "16.0.1",
    "@rollup/plugin-typescript": "12.1.4",
    "@types/jest": "30.0.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "c8": "10.1.3",
    "jest": "30.0.5",
    "jsdom": "26.1.0",
    "rimraf": "6.0.1",
    "rollup": "4.47.1",
    "rollup-plugin-delete": "3.0.1",
    "rollup-plugin-dts": "6.2.3",
    "ts-jest": "29.4.1",
    "tslib": "2.8.1",
    "typescript": "5.9.2",
    "vitest": "3.2.4"
  },
  "scripts": {
    "build:types": "tsc --emitDeclarationOnly --removeComments false --outDir dist/dts",
    "build:bundle": "rollup -c",
    "build": "npm run build:types && npm run build:bundle",
    "clean": "rimraf dist && rimraf build",
    "prepack": "npm run clean && npm run build",
    "test": "vitest",
    "test:coverage": "vitest run --coverage --reporter=html"
  },
  "author": "Leal Bioley <lb@syware.ch>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bioleyl/jadis.git"
  },
  "bugs": {
    "url": "https://github.com/bioleyl/jadis/issues"
  },
  "homepage": "https://bioleyl.github.io/jadis/",
  "description": "Jadis is a minimal JavaScript library for building web interfaces using native Web Components.",
  "keywords": [
    "jadis",
    "web components",
    "custom elements",
    "frontend",
    "native",
    "javascript",
    "typescript",
    "no framework",
    "vanilla js",
    "lightweight",
    "minimal",
    "no virtual dom",
    "no reactivity",
    "simple ui",
    "frontend toolkit",
    "browser native",
    "anti-framework",
    "html templates",
    "declarative",
    "nostalgia"
  ]
}