{
  "name": "@jadis/core",
  "version": "0.4.3",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.mjs",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.mjs",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:ts": "tsc -p ./tsconfig.json --emitDeclarationOnly false",
    "build:rollup": "rollup -c",
    "build": "npm run build:ts && npm run build:rollup",
    "clean": "rimraf dist && rimraf build",
    "prepack": "npm run clean && npm run build"
  },
  "author": "Leal Bioley <lb@syware.ch>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bioleyl/jadis.git"
  },
  "bugs": {
    "url": "https://github.com/bioleyl/jadis/issues"
  },
  "homepage": "https://bioleyl.github.io/jadis/",
  "description": "Jadis is a minimal JavaScript library for building web interfaces using native Web Components.",
  "keywords": [
    "jadis",
    "web components",
    "custom elements",
    "frontend",
    "native",
    "javascript",
    "typescript",
    "no framework",
    "vanilla js",
    "lightweight",
    "minimal",
    "no virtual dom",
    "no reactivity",
    "simple ui",
    "frontend toolkit",
    "browser native",
    "anti-framework",
    "html templates",
    "declarative",
    "nostalgia"
  ]
