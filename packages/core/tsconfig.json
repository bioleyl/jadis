{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "module": "esnext",
    "outDir": "./dist",
    "target": "esnext",
    "removeComments": true,
    "isolatedModules": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "build",
    "dist",
    "vitest.config.ts",
    "build.config.ts"
  ]
}