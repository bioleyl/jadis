{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES2023",
      "ES2023.Array",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": [
    "**/dist",
    "**/node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.stub.ts",
    "**/vitest.config.ts"
  ]
}